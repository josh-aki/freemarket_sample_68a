= render "shared/main-header"
.sales-show
  .sales-show__contents
    .sales-show__contents__name
      = @sale.name
    .sales-show__contents__main.clearfix
      .sale-photo
        %ul.bxslider
          - @sale.photos.each do |photo|
            %li
              = image_tag photo.image.url, class:"photo-image"  
        .custom-thumb
      .sale-detail-table
        %table
          %tr
            %th 出品者
            %td 
              = @sale.seller.nickname
          %tr
            %th カテゴリ
            %td 
              - @sale.categories.each do |categories|
                = categories.name
          %tr
            %th 商品の状態
            %td 
              = @sale.status_i18n
          %tr
            %th 配送料の負担
            %td 
              = @sale.delivery_payer.type
          %tr
            %th 配送元地域
            %td 
              = @sale.prefecture.name
          %tr
            %th 発送日の目安
            %td 
              = @sale.prep_days.type

    .sales-show__contents__price-box
      %span.item-price
        %span ¥
        = @sale.price
      %span.item-tax
        (税込)
    .sales-show__contents__purchase
      = link_to('購入画面に進む', root_path, class: 'purchase-btn')
    .sales-show__contents__discription
      = @sale.detail

    .sales-show__contents__purchase
      = link_to('商品の編集', root_path, class: 'purchase-btn')
    %span or
    .sales-show__contents__purchase
      = link_to('この商品を削除する', root_path, class: 'purchase-btn')
= render "shared/appBanner"
= render "shared/main-footer"
