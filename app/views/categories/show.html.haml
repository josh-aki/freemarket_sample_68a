.category-page
  .container
    .child-links
      - @children.each do |child|
        = link_to child.name, category_path(child.id), class: 'child-link'
    .sale-item-container
      .sale-item-container__header
        = "#{@category.name}の商品一覧"
      .sale-items
        = render partial: "shared/sale", collection: @sales
    .category-label
      = @parent.present? ? "#{@category.name}(#{@parent.name})" : @category.name