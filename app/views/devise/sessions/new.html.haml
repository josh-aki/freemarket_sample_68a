.account-page
  = render "shared/user-header"
  .account-page__contents
    .account-page__contents__title
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", registration_path(resource_name), class: 'registration-btn'
    .account-page__contents__register
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        
        .field
          .field-label
            = f.label :メールアドレス
            
          .field-input
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
        .field
          .field-label
            = f.label :パスワード
          .field-input
            = f.password_field :password, autocomplete: "off", placeholder: '7文字以上の半角英数字'
        .actions
          = f.submit "ログイン", class: 'btn' 
  = render "shared/user-footer"
  

 

      




  



